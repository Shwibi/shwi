<!DOCTYPE html>
<html>
	<head>
		<title>Study Material</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" href="images/favicon.png" />
		<style>
			@import url("https://fonts.googleapis.com/css?family=Antic+Slab|Ubuntu|Merriweather");
			@import url("styles/scrollbar.css");
			body {
				background-color: #1e2332;
				color: azure;
				margin: 0;
				font-family: "Ubuntu";
			}
			html {
				scroll-behavior: smooth;
			}
			a:not(.bt) {
				text-decoration: none;
				cursor: pointer;
				color: wheat;
				border-bottom: 2px solid rgba(255, 255, 255, 0);
				margin-bottom: 20px;
				display: inline-block;
				width: 1000px;
				text-align: center;
				vertical-align: middle;
				line-height: 50px;
				background-color: rgb(36, 60, 61);
				border-radius: 10px;
				transition-duration: 150ms;
			}
			a:hover:not(.bt) {
				background-color: teal;
			}
			input {
				border: none;
				border-right: 2px solid transparent;
				border-left: 2px solid transparent;
				border-bottom: 2px solid black;
				background-color: transparent;
				padding: 10px;
				width: 500px;
				height: 35px;
				font-size: large;
				transition-duration: 300ms;
				border-radius: 12px;
			}
			input:focus {
				background-color: wheat;
				outline: none;
			}
			button {
				padding: 20px;
				border: none;
				background-color: teal;
				color: white;
				border-radius: 10px;
				width: 200px;
				cursor: pointer;
				transition-duration: 200ms;
			}
			button:hover {
				background-color: rgb(70, 112, 204);
			}

			svg {
				display: block;
				position: fixed;
				z-index: -1;
				top: 1rem;
				opacity: 0.5;
			}

			.back-top {
				display: grid;
				grid-template-columns: 1, 1fr;
				justify-content: right;
				align-items: flex-end;
			}
			.bt {
				float: right;
				text-decoration: none;
				color: white;
			}
		</style>
	</head>
	<body>
		<!-- Wave -->
		<svg
			width="1440"
			height="620"
			viewBox="0 0 1440 620"
			fill="none"
			xmlns="http://www.w3.org/2000/svg"
		>
			<path
				d="M0 0C60.8333 137.833 251.8 390.8 529 300C875.5 186.5 1016 462 1053.5 522C1091 582 1226 639.5 1317.5 562C1409 484.5 1406.5 504 1455.5 497.5V620H0V0Z"
				fill="#1d1438"
			/>
		</svg>
		<h1 style="font-size: 40px">Study Material</h1>
		<br />
		<input
			type="text"
			id="input"
			onkeyup="search()"
			placeholder="Search..."
			autocomplete="off"
		/>
		<button onclick="window.location.reload()">Reload List</button>

		<ul style="list-style-type: none; margin: 0" id="listing">
			<li>
				<h1>Physics</h1>

				<% for(let p = 0; p < physics.length; p++) { %>
			</li>

			<li>
				<h2>Physics/<%= physics[p].chapter %></h2>

				<% if(physics[p].dpps.length !== 0) {%>

				<h3>Physics/<%= physics[p].chapter %>/DPPs</h3>

				<% for(let pd = 0; pd < physics[p].dpps.length; pd++) {%>
			</li>

			<li>
				<a
					href="dashboard/physics/<%= physics[p].chapter %>/<%= physics[p].dpps[pd] %>"
					><%= physics[p].dpps[pd] %> (<%= physics[p].chapter %>) [Physics]</a
				>
			</li>

			<% } %> <% } %> <% if(physics[p].notes.length !== 0) {%>

			<h3>Physics/<%= physics[p].chapter %>/Notes</h3>

			<% for(let pn = 0; pn < physics[p].notes.length; pn++) {%>

			<li>
				<a
					href="dashboard/physics/<%= physics[p].chapter %>/<%= physics[p].notes[pn] %>"
					><%= physics[p].notes[pn] %> (<%= physics[p].chapter %>) [Physics]</a
				>
			</li>

			<% } %> <% } %> <% if(physics[p].other.length !== 0) {%>
			<h3>Physics/<%= physics[p].chapter %>/Other</h3>
			<% for(let pn = 0; pn < physics[p].other.length; pn++) {%>
			<li>
				<a
					href="dashboard/physics/<%= physics[p].chapter %>/<%= physics[p].other[pn] %>"
					><%= physics[p].other[pn] %> (<%= physics[p].chapter %>) [Physics]</a
				>
			</li>
			<% } %> <% } %> <% } %>

			<li>
				<h1>Chemistry</h1>
				<% for(let p = 0; p < chemistry.length; p++) { %>
			</li>

			<li>
				<h2>Chemistry/<%= chemistry[p].chapter %></h2>
				<% if(chemistry[p].dpps.length !== 0) {%>
				<h3>Chemistry/<%= chemistry[p].chapter %>/DPPs</h3>
				<% for(let pd = 0; pd < chemistry[p].dpps.length; pd++) {%>
			</li>

			<li>
				<a
					href="dashboard/chemistry/<%= chemistry[p].chapter %>/<%= chemistry[p].dpps[pd] %>"
					><%= chemistry[p].dpps[pd] %> (<%= chemistry[p].chapter %>)
					[Chemistry]</a
				>
			</li>
			<% } %> <% } %> <% if(chemistry[p].notes.length !== 0) {%>
			<h3>Chemistry/<%= chemistry[p].chapter %>/Notes</h3>
			<% for(let pn = 0; pn < chemistry[p].notes.length; pn++) {%>
			<li>
				<a
					href="dashboard/chemistry/<%= chemistry[p].chapter %>/<%= chemistry[p].notes[pn] %>"
					><%= chemistry[p].notes[pn] %> (<%= chemistry[p].chapter %>)
					[Chemistry]</a
				>
			</li>
			<% } %> <% } %> <% if(chemistry[p].other.length !== 0) {%>
			<h3>Chemistry/<%= chemistry[p].chapter %>/Other</h3>
			<% for(let pn = 0; pn < chemistry[p].other.length; pn++) {%>
			<li>
				<a
					href="dashboard/chemistry/<%= chemistry[p].chapter %>/<%= chemistry[p].other[pn] %>"
					><%= chemistry[p].other[pn] %> (<%= chemistry[p].chapter %>)
					[Chemistry]</a
				>
			</li>
			<% } %> <% } %> <% } %>

			<li>
				<h1>Biology</h1>
				<% for(let p = 0; p < biology.length; p++) { %>
			</li>

			<li>
				<h2>Biology/<%= biology[p].chapter %></h2>
				<% if(biology[p].dpps.length !== 0) {%>
				<h3>Biology/<%= biology[p].chapter %>/DPPs</h3>
				<% for(let pd = 0; pd < biology[p].dpps.length; pd++) {%>
			</li>

			<li>
				<a
					href="dashboard/biology/<%= biology[p].chapter %>/<%= biology[p].dpps[pd] %>"
					><%= biology[p].dpps[pd] %> (<%= biology[p].chapter %>) [Biology]</a
				>
			</li>
			<% } %> <% } %> <% if(biology[p].notes.length !== 0) {%>
			<h3>Biology/<%= biology[p].chapter %>/Notes</h3>
			<% for(let pn = 0; pn < biology[p].notes.length; pn++) {%>
			<li>
				<a
					href="dashboard/biology/<%= biology[p].chapter %>/<%= biology[p].notes[pn] %>"
					><%= biology[p].notes[pn] %> (<%= biology[p].chapter %>) [Biology]</a
				>
			</li>
			<% } %> <% } %> <% if(biology[p].other.length !== 0) {%>
			<h3>Biology/<%= biology[p].chapter %>/Other</h3>
			<% for(let pn = 0; pn < biology[p].other.length; pn++) {%>
			<li>
				<a
					href="dashboard/biology/<%= biology[p].chapter %>/<%= biology[p].other[pn] %>"
					><%= biology[p].other[pn] %> (<%= biology[p].chapter %>) [Biology]</a
				>
			</li>
			<% } %> <% } %> <% } %>
		</ul>

		<div class="back-top"><a class="bt" href="#">Back top?</a></div>
		<script>
			function search() {
				// Declare variables
				var input, filter, ul, li, a, i, txtValue;
				input = document.getElementById("input");
				filter = input.value.toUpperCase();
				ul = document.getElementById("listing");
				li = ul.getElementsByTagName("li");

				// Loop through all list items, and hide those who don't match the search query
				for (i = 0; i < li.length; i++) {
					check(li[i]);
					let liChildA = li[i].getElementsByTagName("li");
					if (liChildA.length !== 0) {
						for (let a = 0; a < liChildA.length; a++) {
							check(liChildA[a]);
							let liChildB = liChildA[a].getElementsByTagName("li");
							if (liChildB.length !== 0) {
								check(liChildB);
							}
						}
					}
				}
			}
			function check(inlet) {
				filter = input.value.toUpperCase();
				txtValue = inlet.getElementsByTagName("a")[0]
					? inlet.getElementsByTagName("a")[0].textContent
					: "";
				if (txtValue.toUpperCase().includes(filter)) {
					inlet.style.display = "";
				} else {
					inlet.style.display = "none";
				}
			}
		</script>
	</body>
</html>
