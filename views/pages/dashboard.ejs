                                <li>
				                    <a href="dashboard/physics/<%= physics[p].chapter %>/<%= physics[p].dpps[pd] %>"><%= physics[p].dpps[pd] %> (<%= physics[p].chapter %>) [Physics]</a>
                                </li> 
                            <% } %>
                        <% } %>
                        <% if(physics[p].notes.length !== 0) {%>
